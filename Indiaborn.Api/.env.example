# Backend Environment Variables
# Copy this file to .env for local development
# For production, set these in your hosting platform (Render, Railway, etc.)

# MongoDB Configuration
MongoSettings__ConnectionString=mongodb://localhost:27017
MongoSettings__DatabaseName=IndiabornDb

# JWT Configuration
JwtSettings__Secret=your-super-secret-jwt-key-at-least-32-characters-long-change-this-in-production
JwtSettings__Issuer=IndiaBornAPI
JwtSettings__Audience=IndiaBornClient
JwtSettings__ExpiryMinutes=1440

# Stripe Payment Configuration
StripeSettings__PublishableKey=your_stripe_publishable_key_here
StripeSettings__SecretKey=your_stripe_secret_key_here

# Notification Services Configuration
NotificationSettings__WhatsAppToken=your_whatsapp_business_api_token
NotificationSettings__MessengerToken=your_facebook_messenger_token
NotificationSettings__TwilioAccountSid=your_twilio_account_sid
NotificationSettings__TwilioAuthToken=your_twilio_auth_token
NotificationSettings__TwilioPhoneNumber=your_twilio_phone_number

# Server Configuration
ASPNETCORE_URLS=http://localhost:5184
ASPNETCORE_ENVIRONMENT=Development

# For production deployment:
# ASPNETCORE_URLS=http://0.0.0.0:10000
# ASPNETCORE_ENVIRONMENT=Production
